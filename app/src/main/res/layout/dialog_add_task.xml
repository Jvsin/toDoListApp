<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/cardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOWE ZADANIE:"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTitle"
        />

    <EditText
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/settings"
        app:layout_constraintTop_toBottomOf="@id/description"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/notificationLayout"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/description">

            <TextView
                android:gravity="center"
                android:id="@+id/notification_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Powiadomienie: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <Spinner
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/notification_array"
                app:layout_constraintStart_toEndOf="@id/notification_label"
                app:layout_constraintTop_toBottomOf="@id/description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/categoryLayout"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/description">

            <TextView
                android:gravity="center"
                android:id="@+id/category_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategoria: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notification" />

            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/category_array"
                app:layout_constraintStart_toEndOf="@id/category_label"
                app:layout_constraintTop_toBottomOf="@id/notification" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/execution_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz czas wykonania"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings" />


</androidx.constraintlayout.widget.ConstraintLayout>